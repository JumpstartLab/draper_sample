<% title "All Products" %>

<table>
  <tr>
    <th></th>
    <th>Product</th>
    <th>Price</th>
    <th>Stock</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product_image(product.image_url) %></td>
      <td>
        <span class="product_title">
          <%= link_to product.title, product_path(product) %>
        </span>
        <%= product.description %>
      </td>
      <td><%= print_price(product.price) %></td>
      <td><%= print_stock(product.stock) %></td>
      <td><%= button_to "Add to Cart", order_items_path(:product_id => product, :order_id => @order.id) %></td>
    </tr>
  <% end %>

</table>

<p><%= link_to "Create a New Product", new_product_path, :id => "new_product" %></p>
